%main.creditcard__container
  .creditcard__container__content
    .creditcard__container__chapter
      %h2.creditcard__container__chapter__head 支払い方法
      .creditcard__container__chapter__inner
        %section
          .creditcard__container__chapter__inner__content
            %h3.creditcard__container__chapter__subhead クレジットカード一覧
          %ul.creditcard__list
            %li
              = form_with model: @card, url: {action: :new}, local: true, class: "creditcard__container__chapter__inner__content", method: :delete do |f|
                %figure
                  = image_tag asset_path("logo/master-card.svg"), alt: '', height: '20', width: '34'
                .card-info
                  = "**** **** **** " + @default_card_information.last4
                .card-info
                  - exp_month = @default_card_information.exp_month.to_s
                  - exp_year = @default_card_information.exp_year.to_s.slice(2,3) 
                  = exp_month + " / " + exp_year
                = f.button '削除する', class: "card-remove-btn"