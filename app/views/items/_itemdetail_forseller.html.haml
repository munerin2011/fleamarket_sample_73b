%link{crossorigin: "anonymous", href: "https://cdnjs.cloudflare.com/ajax/libs/luminous-lightbox/2.3.2/luminous-basic.css", integrity: "sha512-ZWBxkS1FFKklAjYzD98QwMSZfARyE+dReALepM7DdaTgiFGbQxlcrNYWwAcKH0DSc96wk8oGB5kOQLlHV70fdg==", rel: "stylesheet"}/
%script{crossorigin: "anonymous", integrity: "sha512-m4kT2yNAKoSDZ6+orVQhqgrIMwAng5X/wBEiNeegedjIRhZRnlgyGzYqkzJ1HR1wn0aidznu8O4Yzz7bKTSrFQ==", src: "https://cdnjs.cloudflare.com/ajax/libs/luminous-lightbox/2.3.2/luminous.min.js"}
%main.itemdetail-background
  .itemdetail
    %h1.itemdetail--name
      = @item.name
    .itemdetail__content
      .itemdetail__content__photo
        .owl-carousel.owl-theme.owl-loaded.owl-drag
          - for i in 0..(@item.item_imgs.size - 1)
            .item-photo
              = link_to "#{@item.item_imgs[i].url.url}", class: "luminous", "data-hash" => "#{i}" do
                = image_tag @item.item_imgs[i].url.url
        #slide-control-box
          - for i in 0..(@item.item_imgs.size - 1)
            = link_to "##{i}", class: "slide-controls" do
              = image_tag @item.item_imgs[i].url.url, class: "slide-images"
      %table.itemdetail__content__table
        %tbody.itemdetail__content__table__body
          %tr
            %th 出品者
            %td
              = link_to @seller.nickname, user_path(@seller.id), method: :get 
              %div
                .item-user-ratings
                  = icon('far', 'smile', class: "icon-good")
                  %span 8
                .item-user-ratings
                  = icon('far', 'frown', class: "icon-bad")
                  %span 0
          %tr
            %th カテゴリー
            %td
              = link_to category_path(@category_parent), method: "get" do
                %div
                  = @category_parent.category
              = link_to category_path(@category_child), method: "get" do
                .item-detail-table-category
                  = icon('fas','caret-right', class: 'icon-arrow-right')
                  = @category_child.category
              = link_to category_path(@category_grandchild), method: "get" do
                .item-detail-table-category
                  = icon('fas','caret-right', class: 'icon-arrow-right')
                  = @category_grandchild.category
          %tr
            %th ブランド
            %td
              = link_to "", method: "get" do
                %div
                  アディダス
          %tr
            %th 商品のサイズ
            %td L
          %tr
            %th 商品の状態
            %td
              = @item_condition.name
          %tr
            %th 配送料の負担
            %td
              = @postage_payer.name
          %tr
            %th 配送の方法
            %td
              = @postage_type.name
          %tr
            %th 配送元地域
            %td
              = @prefecture.name
          %tr
            %th 発送日の目安
            %td
              = @preparation_day.name
    .itemdetail__pricebox
      .itemdetail__pricebox__price
        = "#{@item.price.to_s(:delimited, delimiter: ',')}円"
      .itemdetail__pricebox__tax （税込）
      .itemdetail__pricebox__shippingfee
        - if @postage_payer.name == '送料込み(出品者負担)'
          送料込み
        - else
          送料別途
    .itemdetail__description
      %p.itemdetail__description__inner
        = @item.introduction
  .item-edit-delete
    .item-edit-delete__box
      - if @item.trading_status == 0
        = link_to "商品の編集", edit_item_path(@item), method: :get, class: "item-edit-button"
        %p.text-center or
      = link_to "この商品を削除する", item_path(@item), method: :delete, class: "item-delete-button"
  .itemcomment
    .itemcomment__box
      .itemcomment__box__content
        - if current_user
          = form_with(model:[@item, @comment], local:true, class: "message-form") do |form|
            %p 相手のことを考え丁寧なコメントを心がけましょう。不快な言葉遣いなどは利用制限や退会処分となることがあります。
            = form.text_area :text, {class: "textarea-default"}
            = button_tag "", {type: "reset", class: "message-submit-btn"} do
              = form.submit "コメントする"        
        - else
          %strong
            %p ※※※ コメントの投稿には新規登録/ログインが必要です ※※※

        .itemcomment__box__content__comment
          %p コメント一覧
          - if @comments
            .itemcomment__box__content__comment__member
            - @comments.each do |comment|
              %ul
                = link_to comment.user.nickname, "/users/#{comment.user_id}"
                = comment.text