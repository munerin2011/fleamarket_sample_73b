              .delivery_area
                %label 発送元の地域
                %span.must 必須
                .delivery_area_option
                  .field
                    = f.label :prefecture_code
                    %br/
                    = f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code,:name, include_blank: '都道府県'
                  %svg{"aria-hidden" => "true", :fill => "#888888", "fill-rule" => "evenodd", :height => "24", :viewbox => "0 0 24 24", :width => "24"}
                    %path{:d => "M12,15.66a1.73,1.73,0,0,1-1.2-.49L5.21,9.54a.7.7,0,0,1,1-1l5.62,5.62c.15.15.27.15.41,0L17.8,8.6a.71.71,0,0,1,1,0,.69.69,0,0,1,0,1l-5.57,5.58A1.71,1.71,0,0,1,12,15.66Z"}
                .delivery_day
                  %label 発送までの日数
                  %span.must 必須
                .delivery_shipping
                  .field
                    = f.label :prefecture_code
                    %br/
                    = f.collection_select :preparation_day_id, PreparationDay.all, :id, :name
                  %svg{"aria-hidden" => "true", :fill => "#888888", "fill-rule" => "evenodd", :height => "24", :viewbox => "0 0 24 24", :width => "24"}
                    %path{:d => "M12,15.66a1.73,1.73,0,0,1-1.2-.49L5.21,9.54a.7.7,0,0,1,1-1l5.62,5.62c.15.15.27.15.41,0L17.8,8.6a.71.71,0,0,1,1,0,.69.69,0,0,1,0,1l-5.57,5.58A1.71,1.71,0,0,1,12,15.66Z"}
          %hr.border/
          .price-all
            .price
              %p.price_about
                価格（¥
                / 
                300
                / 
                〜
                / 
                9,999,999
                / 
                ）
