                  %circle{:cx => "12", :cy => "16.24", :r => "1"}
              .delivery_day
                %label 配送方法
                %span.must 必須
              .delivery_shipping
                .field
                  = f.label :postate_type
                  %br/
                  = f.collection_select :postage_type_id, PostageType.all, :id, :name
