                    %circle{:cx => "12", :cy => "16.24", :r => "1"}
              .price_write
                .price_write_selling
                  %label 販売価格
                  %span.must 必須
                .price_input
                  %span.price_logo ¥
                  .price_input_field
                    = f.number_field :price, class: "price_input_field_form"
                    %br/
          %hr.border/
          .submit
            .submit_form
              = f.submit class: "submit_form_field"
        %footer
          規約
