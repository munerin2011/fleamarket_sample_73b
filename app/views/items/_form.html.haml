%body
  = form_for @item do |f|
    .superall
      .all
        %header
          .logo
            %img{ src: "/assets/logo.png", height: "80", width: "300" }
        .center
          .goods-photo
            #image-box
              = f.fields_for :item_imgs do |i|
                = i.file_field :url
          %hr.border/
          .goods-all
            .goods
              %label 商品名
              %span.must 必須
            .goods_name
              = f.text_field :name, class: "goods_name_field"
              %br/
            .goods_about
              %label 商品の説明
              %span.must 必須
            = f.text_field :introduction, class: "goods_introduction_field"
            -# %textarea.goods_field{:name => "description", :placeholder => "商品の説明（必須 1,000文字以内）(色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", :rows => "7"}
          %hr.border/
          .details
            %p.detail 商品の詳細
            .category
              %label カテゴリー
              %span.must 必須
            .category_type
              .field
                = f.label :category
                %br/
                = f.collection_select :category_id, Category.all, :id, :category
            .brand-all
              .brand
                %label ブランド
                %span.arbitrary 任意
              .brand_type
                = f.collection_select :brand_id, @brands, :id, :brand
                -# = f.text_field :brand, class: "brand_select", :placeholder => "例）シャネル"
    
            .goods-status-all
              .goods-status
                %label 商品の状態
                %span.must 必須
                %div
                  .status-select
                    .field
                      = f.label :item_condition
                      %br/
                      = f.collection_select :item_condition_id, ItemCondition.all, :id, :name
          %hr.border/
          .delivery
            %p.delivery_about
